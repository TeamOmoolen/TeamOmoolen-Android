<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="viewModel"
            type="com.omoolen.omooroid.onboarding.fragments.one.OneOnboardViewModel" />
    </data>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="성별을 알려주세요!"
        android:textColor="@color/bold_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_gender2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="연령과 성별에 따라 많이 찾는 렌즈를 추천해드릴게요!"
        android:textSize="14sp"
        android:textColor="@color/text_gray"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_gender"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_gender2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_female"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:background="@drawable/onboard_selector"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cl_male"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="2dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginRight="10dp"
            >

            <ImageView
                android:id="@+id/iv_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_female_selected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_female"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여성"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_female"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_male"
            android:layout_width="155dp"
            android:layout_height="150dp"
            android:background="@drawable/onboard_selector"
            app:layout_constraintStart_toEndOf="@id/cl_female"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="2dp"
            android:layout_margin="1dp"
            >
            <ImageView
                android:id="@+id/iv_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_male_unselected"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/tv_male"
                app:layout_constraintTop_toTopOf="parent"
                />
            <TextView
                android:id="@+id/tv_male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="남성"
               app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/iv_male"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="나이를 알려주세요!"
        android:textColor="@color/bold_black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/cl_gender"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_age"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_age"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            android:id="@+id/tv_10"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="10대"
            android:textSize="14sp"
            android:background="@drawable/onboard_selector"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_20"
            android:layout_marginTop="1dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_20"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="20대"
            android:textSize="14sp"
            android:background="@drawable/onboard_selector"
            android:elevation="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_10"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="1dp"/>

        <TextView
            android:id="@+id/tv_30"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="30대"
            android:textSize="14sp"
            android:background="@drawable/onboard_selector"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/tv_40"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginRight="10dp"
            />
        <TextView
            android:id="@+id/tv_40"
            android:layout_width="155dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="40대 이상"
            android:textSize="14sp"
            android:background="@drawable/onboard_selector"
            android:elevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tv_20"
            app:layout_constraintStart_toEndOf="@id/tv_30"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="1dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:text="다음"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/orange"
        />


</androidx.constraintlayout.widget.ConstraintLayout>


</layout>
